<xr:Canvas3D
    x:Class="XRSharpSamplesGallery.Samples.Game"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ei="http://schemas.microsoft.com/expression/2010/interactions"
    xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
    xmlns:xr="http://xrsharp.io/xr"
    Name="GameView"
    xr:Canvas3D.IsDraggable="True">
    <xr:Canvas3D.Resources>
        <Style x:Key="RoundedBox_Style" TargetType="xr:RoundedBox">
            <Setter Property="Radius" Value="0.002" />
            <Setter Property="xr:Material.Metalness" Value="0.3" />
        </Style>
        <Style x:Key="Button3D_Style" TargetType="xr:Button3D">
            <Setter Property="SizeX" Value="0.03" />
            <Setter Property="SizeY" Value="0.03" />
            <Setter Property="SizeZ" Value="0.01" />
            <Setter Property="Background" Value="#FF3C3C3C" />
            <Setter Property="Foreground" Value="#FFBBBBBB" />
            <Setter Property="FontSize" Value="18" />
            <Setter Property="Padding" Value="0.005" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="xr:Button3D">
                        <xr:Grid3D>
                            <i:Interaction.Triggers>
                                <i:EventTrigger EventName="MouseEnter">
                                    <ei:ChangePropertyAction
                                        PropertyName="Opacity"
                                        TargetObject="{Binding ElementName=FocusedBox}"
                                        Value="0.1" />
                                </i:EventTrigger>
                                <i:EventTrigger EventName="MouseLeave">
                                    <ei:ChangePropertyAction
                                        PropertyName="Opacity"
                                        TargetObject="{Binding ElementName=FocusedBox}"
                                        Value="0" />
                                </i:EventTrigger>
                                <ei:DataTrigger Binding="{TemplateBinding IsPressed}" Value="True">
                                    <ei:ChangePropertyAction PropertyName="Scale" Value="1 1 0.2" />
                                </ei:DataTrigger>
                                <ei:DataTrigger Binding="{TemplateBinding IsPressed}" Value="False">
                                    <ei:ChangePropertyAction PropertyName="Scale" Value="1" />
                                </ei:DataTrigger>
                            </i:Interaction.Triggers>
                            <xr:RoundedBox
                                x:Name="BackgroundBox"
                                Radius="0.002"
                                SizeX="{TemplateBinding SizeX}"
                                SizeY="{TemplateBinding SizeY}"
                                SizeZ="{TemplateBinding SizeZ}"
                                Color="{TemplateBinding Background}" />
                            <xr:RoundedBox
                                x:Name="FocusedBox"
                                Opacity="0"
                                Radius="0.002"
                                SizeX="{TemplateBinding SizeX}"
                                SizeY="{TemplateBinding SizeY}"
                                SizeZ="{TemplateBinding SizeZ}"
                                Color="Blue" />
                            <xr:TextBlock3D
                                Margin="{TemplateBinding Padding}"
                                xr:Canvas3D.X="-0.004"
                                xr:Canvas3D.Z="0.005"
                                SizeX="0.25"
                                Text="{TemplateBinding Content}" />
                        </xr:Grid3D>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!--  Implicit styles  -->
        <Style BasedOn="{StaticResource RoundedBox_Style}" TargetType="xr:RoundedBox" />
        <Style BasedOn="{StaticResource Button3D_Style}" TargetType="xr:Button3D" />

    </xr:Canvas3D.Resources>

    <!--  Control Center  -->
    <xr:Canvas3D
        xr:Canvas3D.X="-0.2"
        xr:Canvas3D.Y="0.2"
        xr:Canvas3D.Z="0.3"
        Rotation="-10 30 0">
        <xr:Canvas3D>
            <xr:TextBlock3D
                xr:Canvas3D.X="-0.03"
                xr:Canvas3D.Y="0.03"
                Foreground="White"
                SizeX="0.25"
                SizeY="0.25"
                Text="Rotation" />
            <xr:StackPanel3D>
                <xr:Button3D
                    Name="B71"
                    Background="Goldenrod"
                    Click="ControlBtn_Click"
                    Content="Y"
                    FontSize="30"
                    Foreground="Black" />
                <xr:Button3D
                    Name="B11"
                    Background="Goldenrod"
                    Click="ControlBtn_Click"
                    Content="X"
                    FontSize="30"
                    Foreground="Black" />
            </xr:StackPanel3D>
            <xr:Canvas3D>
                <xr:Button3D
                    Name="B81"
                    xr:Canvas3D.X="0.065"
                    xr:Canvas3D.Y="0.1725"
                    Click="ControlBtn_Click"
                    Content="F" />

                <xr:Button3D
                    Name="B41"
                    xr:Canvas3D.X="0.0325"
                    xr:Canvas3D.Y="0.14"
                    Click="ControlBtn_Click"
                    Content="L" />

                <xr:Button3D
                    Name="B61"
                    xr:Canvas3D.X="0.0975"
                    xr:Canvas3D.Y="0.14"
                    Click="ControlBtn_Click"
                    Content="R" />
                <xr:Button3D
                    Name="B21"
                    xr:Canvas3D.X="0.065"
                    xr:Canvas3D.Y="0.1075"
                    Click="ControlBtn_Click"
                    Content="C" />



            </xr:Canvas3D>

            <xr:TextBlock3D
                xr:Canvas3D.X="0.12"
                xr:Canvas3D.Y="0.065"
                Foreground="White"
                SizeX="0.25"
                SizeY="0.25"
                Text="Elevation:" />
            <xr:StackPanel3D xr:Canvas3D.X="0.15" Orientation="YAxis">
                <xr:Button3D
                    Name="B31"
                    Background="Teal"
                    Click="ControlBtn_Click"
                    Content="B" />
                <xr:Button3D
                    Name="B91"
                    Background="Teal"
                    Click="ControlBtn_Click"
                    Content="T" />
            </xr:StackPanel3D>
        </xr:Canvas3D>

        <xr:RoundedBox
            xr:Canvas3D.X="0.08"
            xr:Canvas3D.Y="0.08"
            xr:Canvas3D.Z="-0.0025"
            Opacity="0.5"
            SizeX="0.265"
            SizeY="0.265"
            SizeZ="0.0055"
            Color="#FF161616" />
    </xr:Canvas3D>

    <!--  Test Object  -->
    <xr:Canvas3D
